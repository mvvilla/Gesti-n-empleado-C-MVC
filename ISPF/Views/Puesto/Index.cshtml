@model ISPF.Models.PuestoModelo
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>Gestion de Puestos</h2>
<a class="btn btn-primary" href="@Url.Action("insertar","Puesto")">Nuevo</a>
<table class="table">
    <thead>
        <tr>
            <th class="col">Nombre</th>
            <th class="col">Descripci&oacute;n</th>
            <th class="col">Departamento</th>
            <th class="col">Modificar</th>
            <th class="col">Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in ViewBag.data)
        {
            <tr>
                <td>@list.codigo</td>
                <td>@list.des</td>
                <td>@list.codDep</td>
                <td><a href="@Url.Action("modificar",new {cod=list.codigo})" class="glyphicon glyphicon-edit">Modificar</a></td>
                <td><a href="@Url.Action("eliminar",new { cod=list.codigo})" class="glyphicon glyphicon-trash">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>