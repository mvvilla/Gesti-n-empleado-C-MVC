    <div class="form-group">
        <label>Parentesco</label>
        <input type="text" name="partentescoB" id="partentescoB" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fecha de Ingreso</label>
        <input type="text" name="fechIngB" id="fechIngB" class="form-control" />
    </div>
    <div class="form-group">
        <label>Codigo Empleado</label>
        <input type="text" name="codigoEmpleBene" id="codigoEmpleBene" class="form-control" />
    </div>
</div>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        var dep = $("#dpi").val();
        $.get("/Empleado/buscarProf", { cod: $("#dpi").val() }, function (data) {
            $.each(data, function (index, row) {
                $("#uniEmple").val(row.universidad);
                $("#codEmpleProf").val(dep);
                $("#ncoleprof").val(row.colegiado);
                $("#fcoleprof").val(row.fechaCole);
            });

        });

        $.get("/Empleado/buscarBene", { cod: $("#dpi").val() }, function (data) {
            $.each(data, function (index, row) {
                $("#dpiB").val(row.dpi);
                $("#nombreB").val(row.nombre);
                $("#apellidoB").val(row.apellido);
                $("#fechaNB").val(row.fechaN);
                $("#generoB").val(row.genero);
                $("#dirB").val(row.direccion);
                $("#partentescoB").val(row.parentesco);
                $("#fechIngB").val(row.fechaIgreso);
                $("#codigoEmpleBene").val(dep);
            });

        });


    });
