            <label>No. Colegiado</label>
            <input type="text" name="ncole" id="ncoleprof" class="form-control" />
        </div>
        <div class="form-group">
            <label>Fecha Colefiago</label>
            <input type="text" name="fcole" id="fcoleprof" class="form-control" />
        </div>
    </form>
</div>
<br />
<br />
