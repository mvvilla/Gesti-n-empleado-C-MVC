        <input type="text" name="dpiB" id="dpiB" class="form-control" />
    </div>
    <div class="form-group">
        <label>Nombre</label>
        <input type="text" name="nombreB" id="nombreB" class="form-control" />
    </div>
    <div class="form-group">
        <label>Apellido</label>
        <input type="text" name="apellidoB" id="apellidoB" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fecha de Nacimiento</label>
        <input type="text" name="fechaNB" id="fechaNB" class="form-control" />
