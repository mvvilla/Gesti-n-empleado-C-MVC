            <label>Universidad</label>
            <input type="text" id="uniEmple" name="uniEmpleProf" class="form-control" />
        </div>
        <div class="form-group">
            <label>Codigo Empleado</label>
            <input type="text" name="codEmple" id="codEmpleProf" class="form-control" />
        </div>
